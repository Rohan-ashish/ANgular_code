//looping through array elements

const clothes = ["pants","shirts","chinos"];
let length1 =  clothes.length;
for(let i = 0;i< length1;i++){
    console.log(clothes[i]);
}

const items = ["fruit","milk","apples"];

value = items.sort();
reverseValue = items.reverse();
console.log(value);
console.log(reverseValue);

const points = [40, 100, 1, 5, 25, 10];
sortNummeric = points.sort(function(a,b){
    return a - b;
});

console.log(sortNummeric);
