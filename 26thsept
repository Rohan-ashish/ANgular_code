//This keyword
//created an object
const employee = {
firstName: "John",
 lastName : "Doe",
 id       : 5566,
  
fullName: function(){
    return this.firstName + " "+this.lastName;
}
};
//display the data
document.getElementById("id1").innerHTML = employee.fullName();



    </script>
